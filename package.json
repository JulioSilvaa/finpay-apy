{
  "name": "finpay-api",
  "version": "1.0.0",
  "description": "Sistema de cobrança para autônomos - Clean Architecture + DDD",
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx ./src/infra/http/express/Express.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "node ./dist/infra/http/express/Express.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "keywords": [
    "payments",
    "billing",
    "clean-architecture",
    "ddd"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.1.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "@types/express": "^5.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "prisma": "^5.8.0"
  }
}